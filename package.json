{
  "name": "@fab-rvn/spectre-ui",
  "description": "Spectre UI is an open source project for creating strong user interfaces with high quality web components for React",
  "version": "0.0.0",
  "title": "Spectre UI",
  "keywords": [
    "spectre",
    "spectre-ui",
    "react",
    "react-component"
  ],
  "homepage": "https://github.com/fab-rvn/spectre-ui#readme",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/spectre-ui.umd.cjs",
  "module": "./dist/spectre-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/spectre-ui.js",
      "require": "./dist/spectre-ui.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "scripts": {
    "dev": "vite --open",
    "build": "tsc && vite build",
    "lint": "eslint --ignore-path .gitignore . --report-unused-disable-directives --max-warnings 0 && stylelint '**/*.scss'",
    "lint:fix": "eslint --fix --ignore-path .gitignore . && stylelint --fix '**/*.scss'",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "preview": "vite preview",
    "prepare": "husky install",
    "new-component": "bash script.sh",
    "chromatic": "npx chromatic --only-changed"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@storybook/addon-a11y": "^7.0.11",
    "@storybook/addon-essentials": "^7.5.0",
    "@storybook/addon-interactions": "^7.0.11",
    "@storybook/addon-links": "^7.0.11",
    "@storybook/blocks": "^7.0.11",
    "@storybook/manager-api": "^7.0.11",
    "@storybook/react": "^7.0.11",
    "@storybook/react-vite": "^7.5.0",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@storybook/theming": "^7.0.11",
    "@swc/core": "^1.3.58",
    "@swc/jest": "^0.2.26",
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.1",
    "@types/jest-axe": "^3.5.5",
    "@types/node": "^20.1.5",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^4.0.0",
    "chromatic": "^6.19.7",
    "cypress": "^13.3.3",
    "eslint": "^8.38.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-testing-library": "^5.11.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-axe": "^7.0.1",
    "jest-environment-jsdom": "^29.5.0",
    "jest-transform-stub": "^2.0.0",
    "prettier": "^2.8.8",
    "prop-types": "^15.8.1",
    "sass": "^1.62.1",
    "storybook": "^7.5.0",
    "stylelint": "^15.10.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-order": "^6.0.3",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^2.3.0"
  },
  "bugs": {
    "url": "https://github.com/fab-rvn/spectre-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fab-rvn/spectre-ui.git"
  },
